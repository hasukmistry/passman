{
  "name": "passman",
  "version": "1.0.0",
  "description": "Password Manager",
  "main": "index.js",
  "scripts": {
    "dev": "electron-webpack dev",
    "build": "electron-webpack && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Hasmukh Mistry <github.com/hasukmistry/passman>",
  "homepage": "https://github.com/hasukmistry/passman",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "electron": "^15.5.5",
    "electron-builder": "^22.8.1",
    "electron-webpack": "^2.8.2",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "vue": "^2.6.12",
    "vue-loader": "^15.9.3",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4.44.2",
    "elliptic": ">=6.5.4"
  },
  "dependencies": {
    "asar": "^3.0.3",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "crypto-js": "^4.0.0",
    "crypto-random-string": "^3.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "file-loader": "^6.1.0",
    "futures": "^2.3.3",
    "moment": "^2.29.2",
    "otplib": "^12.0.1",
    "qrcode": "^1.4.4",
    "request": "^2.88.2",
    "selfsigned": "^1.10.8",
    "source-map-support": "^0.5.19",
    "sqlite3": "^5.0.3",
    "vue-router": "^3.4.3",
    "websocket-extensions": ">=0.1.4"
  },
  "build": {
    "asar": true,
    "files": [
      "**/*",
      "build/icon.*"
    ],
    "extraResources": [
      {
        "from": "resources"
      },
      {
        "from": "static"
      }
    ],
    "asarUnpack": [
      "./node_modules/sqlite3"
    ],
    "linux": {
      "target": [
        "deb"
      ]
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "outguess"
      ]
    },
    "win": {
      "target": [
        "msi"
      ]
    }
  },
  "electronWebpack": {
    "renderer": {
      "template": "src/template.html"
    }
  }
}
